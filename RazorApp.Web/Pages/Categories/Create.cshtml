@page
@model RazorApp.Web.Pages.Categories.CreateModel

<h3 class="text-center">New Category</h3>

<hr />

<form method="post" asp-page-handler="OnPost">
    <div class="form-group">
        <label>Code</label>
        <input asp-for="CategoryModel.Code" class="form-control" />
        <span asp-validation-for="CategoryModel.Code" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Name</label>
        <input asp-for="CategoryModel.Name" class="form-control" />
        <span asp-validation-for="CategoryModel.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Description</label>
        <textarea asp-for="CategoryModel.Description" class="form-control"></textarea>
    </div>
    <div class="form-group mt-4">

        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>
